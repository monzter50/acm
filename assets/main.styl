@require 'bootstrap.css'
@require 'owl.carousel.css'
@require 'owl.theme.default.css'
@require 'undvars'

/* ==========================================================================
   Custom Styles
   ========================================================================== */

.navbar
    .nav-link
        &:hover
            color $acm


//Menu footers

footer
	background-color $acm
	padding 30px 0
	vertical-align middle
	svg
		width 35px
		float left
		margin-right 10px
	p
		color $rockersoft
	.menufoo
		h4
			color $bleudefrance
			font-weight 700
		ul, li
			list-style none
			padding-left 0
			line-height 1.9
			a
				color $bleudefrance
				text-decoration none
				transition 0.2s ease
				&:hover
					color $redrocker 
					transition 0.2s ease
		span, small
			color $bleudefrance 
	            