{% extends 'main.twig' %}

{% block Content %}

<header class="container-fluid mb-3" id="home">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                {% for slide in sliders %}
				    <div class="carousel-item {% if loop.first %}active{% endif %}">
						<img class="w-100 d-none d-sm-block" src="{{ slide.img }}" alt="{{ slide.title }}">
						<img class="w-100 d-block d-sm-none" src="{{ slide.imgmov }}" alt="{{ slide.title }}">
							{% if slide.over is defined %}    
                                    <img src="{{ slide.over }}" class="img-fluid" alt="">
                            {% endif %}
					</div>
				{% endfor %}
            </div>    
        </div>
    </div>
</header>


	<section class="container">
		{% for item in ope.cont %}
			<div class="row mt-3">
				<div class="col-12">
					<h2>{{ item.title}}</h2>
					<p>{{ item.bodytext }}</p>
					<blockquote class="w-80"><b>{{item.mision}}</b></blockquote>

				</div>
			</div> 
		{% endfor %}
		<div class="row">	
			<div class="col-12">
				<h2>Servicios</h2>
			</div>	
		
			{% for item in ope.servicios %}
			<div class="col-12 col-md-3 col-lg-3">
				<a href="/servicios.php">
					<img src="{{item.image}}">
					<h4>{{item.title|upper}}</h4>	
				</a>
			</div>
			{% endfor %}
		</div>
	</section>


{% endblock %}